pipeline {
    agent any

    environment {
        APP_DIR = "/var/www/my-app"
        PM2 = "/usr/local/bin/pm2"
        CONTAINER_NAME = "my-node-app"
        IMAGE_NAME = "my-node-app-image"
        EMAIL = "ariyalbishnu@gmail.com"
        PORT = "3000"
    }

    stages {

        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Clone Repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/aryalbishnu/aws-jenkins'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t $IMAGE_NAME .
                '''
            }
        }

        stage('Stop and remove Existing Container') {
            steps {
                sh '''
                docker stop $CONTAINER_NAME || true
                docker rm $CONTAINER_NAME || true
                '''
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                docker run -d --name $CONTAINER_NAME -p $PORT:$PORT $IMAGE_NAME
                '''
            }
        }

        stage('Send Deployment Email') {
            steps {
                mail to: "${EMAIL}",
                     subject: "Deployment Successful: ${IMAGE_NAME}",
                     body: "The Docker container ${CONTAINER_NAME} has been successfully deployed and is running on port ${PORT}."
            }
        }
    }

    post {
        success {
            echo "✅ Deployment completed successfully"
        }
        failure {
            echo "❌ Deployment failed"
        }
    }
}

