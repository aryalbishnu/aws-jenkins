pipeline {
    agent any

    environment {
        APP_DIR = "/var/www/my-app"
    }

    stages {

        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Clone Repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/aryalbishnu/aws-jenkins'
            }
        }

        stage('Deploy to EC2') {
            steps {
                sh '''
                mkdir -p $APP_DIR
                rsync -av --delete --exclude=.git --exclude=node_modules ./ $APP_DIR

                cd $APP_DIR
                npm install

                pm2 stop my-app || true
                pm2 start index.js --name my-app
                pm2 save
                '''
            }
        }
    }
}
